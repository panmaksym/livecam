<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- SurfaceView for displaying camera video -->
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/surface_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_start_stream"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- Updated constraint -->

    <!-- Start Stream Button -->
    <Button
        android:id="@+id/button_start_stream"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Stream"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_stop_stream"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1" />

    <!-- Stop Stream Button -->
    <Button
        android:id="@+id/button_stop_stream"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stop Stream"
        app:layout_constraintStart_toEndOf="@+id/button_start_stream"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1" />

</androidx.constraintlayout.widget.ConstraintLayout>
